<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/changePwdBottomSheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background"
        android:backgroundTint="@color/colorAccent"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@drawable/padlock" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/change_pwd"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textAlignment="center"
        android:id="@+id/errorTV_changePwd"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentPassword"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/currentPwdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:inputType="textPassword"
        android:hint="@string/currentPassword"
        android:autofillHints="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newPassword"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/newPwdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:inputType="textPassword"
        android:hint="@string/newPassword"
        android:autofillHints="" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmPassword"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/confirmPwdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:inputType="textPassword"
        android:hint="@string/confirmPassword"
        android:autofillHints="" />

    <Button
        android:id="@+id/changePwdButton_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_pwd"
        android:textStyle="bold"
        android:textColor="@color/actionBtn"
        android:textAppearance="@style/TextButtonStyle"
        android:layout_marginBottom="20dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />

</LinearLayout>